FROM node:18-alpine
RUN apk add --no-cache netcat-openbsd
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma

# Install ALL dependencies (including dev dependencies for development)
RUN npm install

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev:watch"]